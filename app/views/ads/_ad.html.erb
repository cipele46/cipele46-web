<article class="card <%= ad.type_name_css %>" data-details="<%= ad_path(ad) %>">
    <% if ad.image.present? %>
      <figure class="icon window-2">
      <%= link_to image_tag_for_ad(ad, :version => :small), ad_path(ad) %>
      </figure>
    <% end %>
    <h2><%= link_to ad.title, ad_path(ad) %></h2>
    <p><%= ad.description %></p>
    <footer>
        <span class="card-place icon stroke location"><%= ad.city.region.name %></span>
        <span class="card-category icon stroke category"><%= ad.category.name %></span>
        <span class="card-time icon stroke time"><%= time_ago_in_words ad.expires_at %></span>
        <% if current_user %>
          <% if ad_is_favorite(ad.id) %>
            <%= link_to "&#xE0B5;".html_safe, ad_toggle_path(ad.id), add: 'Dodaj u favorite', remove: 'Makni iz favorita', card: ad.id, :class => 'card-favorite selected hidden' %>
          <% else %>
            <%= link_to "&#xE49D;".html_safe, ad_toggle_path(ad.id), add: 'Dodaj u favorite', remove: 'Makni iz favorita', card: ad.id, :class => 'card-favorite hidden' %>
          <% end %>
        <% end %>

    </footer>
</article>

